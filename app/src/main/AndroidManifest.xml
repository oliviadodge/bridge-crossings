<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.oliviadodge.bridgecrossings">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_bridge_crossing"
        android:label="@string/app_name"
        android:theme="@style/BridgeCrossingTheme" >
        <activity
            android:name="com.app.oliviadodge.bridgecrossings.BridgeCrossingPagerActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateVisible|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.oliviadodge.bridgecrossings.BridgeCrossingListActivity" />
        </activity>
        <activity
            android:name="com.app.oliviadodge.bridgecrossings.ArchivedBridgeCrossingListActivity"
            android:label="@string/archived_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.oliviadodge.bridgecrossings.BridgeCrossingListActivity" />
        </activity>
        <activity
            android:name="com.app.oliviadodge.bridgecrossings.BridgeCrossingListActivity"
            android:label="@string/title_activity_bridge_crossing_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.oliviadodge.bridgecrossings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.app.oliviadodge.bridgecrossings.BridgeCrossingListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.oliviadodge.bridgecrossings.BridgeCrossingListActivity" />
        </activity>
    </application>

</manifest>
